{{# if user}}

    {{!-- Homepage for signed in users --}}

<img src="/img/coding.jpg" class="headerimage"></img>
<div class="wrap">
    <div class="type-wrap">
        <div id="typed-strings">
              <h2>Codellab <strong>loves</strong> code.</h2><h2>Codellab <strong>loves </strong> feedback.</h2><h2>Codellab <strong>loves</strong> collaboration.</h2>
        </div>
        <span id="typed" style="white-space:pre;"></span>
    </div>

<span class="element"></span>
      <a href="/user/submitproject" type="submit" class="btn btn-primary commentbutton headerbutton">Upload</a>
</div>
<div class="square"></div>
<h3 class="square-text">Browse thousands of amazing projects</h3>
<p class="para">Check out the projects below and give feedback, love, help or inspiration.</p>
<!-- project card -->

<div class="container">
{{#grouped_each 3 allProjects}}
    <div class="row">
    {{#each this }}
    <a href='/project/{{this.title}}' class="projectlink"></a>
      <div class="col-md-4 col-lg-4">
        <div class="thumbnail-project">

          <div class="color-block">
            <a href='/project/{{this.title}}'>
              <h3>{{this.title}}</h3>
            </a>
          </div>

          <div class="caption-project">
            <h5>{{this.description}}</h5>
            <div class="dingen">
              <span class="glyphicon glyphicon-star" aria-hidden="true"></span> {{this.likes}}
              <span class="glyphicon glyphicon-tag" aria-hidden="true"></span>{{this.language}}
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>{{this.user.accounttype}}
              <hr />
              <a href='/profile/{{this.user.username}}'class="profiel-link">{{this.user.username}}</a>
            </div>
          </div>
        </div>
      </div>
    </a>
    {{/each}}
    </div>
{{/grouped_each}}
</div>


{{else}}

    {{!-- Splash page for non logged in users --}}
    <video playsinline autoplay muted loop poster="polina.jpg" id="bgvid">
        <source src="/media/Office.mp4" type="video/mp4">
    </video>

    <div class="text">
      <p class="titletext">The place where code and people grow</p>
      <p class="bodytext">Learn, teach, comment, collab or just be inspired by the amazing projects developed all over the world.</p>
      <a href="/user/signin" class="btn btn-primary btn-lg signin" role="button" aria-pressed="true">Sign in</a>
      <a href="/user/signup" class="btn btn-warning btn-lg signin" role="button" aria-pressed="true">Register</a>

    </div>
    </button>

{{/if}}
