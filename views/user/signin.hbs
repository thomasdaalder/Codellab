<div class="row">
    <div class="col-md-4 col-md-offset-4">

      {{!-- If there is an message, it will flash the user --}}
      {{#if message}}
          <div class="alert alert-danger">
              {{# each message }}
                  <p>{{this}}</p>
              {{/each}}
          </div>
      {{/if}}

      {{#if invalidInfo}}
          <div class="alert alert-danger">
              {{# each invalidInfo }}
                  <p>{{this}}</p>
              {{/each}}
          </div>
      {{/if}}

        <h1 class="signin-text">Sign In</h1>
        <form action="/user/signin" method="post">
            <div class="form-group">
                <!-- <label for="username">Username</label> -->
                <input type="text" id="username" name="username" class="form-control" placeholder="Username" value="BillGates" required/>
            </div>
            <div class="form-group">
                <!-- <label for="email">Password</label> -->
                <input type="password" id="password" name="password" class="form-control" placeholder="Password" value="Jobs" required/>
            </div>
            <button type="submit" class="btn btn-primary signinbutton">Sign In</button>
        </form>
        <br/>
        <p class="signin-text">Don't have an account? <a href="/user/signup">Sign up here!</a></p>
    </div>
</div>
